import sys
import keyboard
total_sum = 0
print("Press Enter to continue or press Esc to exit: ")
while True:
    try:
        if keyboard.is_pressed('ENTER'):
            char = input("Введите символ: ")
            total_sum += ord(char)
        #if keyboard.is_pressed('Esc'):
            #sys.exit(0)
    except:
        break
print("Сумма ASCII кодов введенных символов: ", total_sum)
